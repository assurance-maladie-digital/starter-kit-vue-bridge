{
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"verbatimModuleSyntax": false,
		"moduleResolution": "node",
		"noUncheckedIndexedAccess": true,
		"allowJs": true,
		"types": ["@types/jest", "@types/node"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
