{
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"verbatimModuleSyntax": false,
		"moduleResolution": "node",
		"noUncheckedIndexedAccess": true,
		"allowJs": true,
		"types": [
			"@types/jest"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
